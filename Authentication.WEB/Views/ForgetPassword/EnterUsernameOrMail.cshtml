@model InsuredTraveling.Models.LoginUser

@{
    ViewBag.Title = "EnterUsernameOrMail";
}


<div class="row">
    <form method="post" id="loginForm" data-otf-ajax="true" action="@Url.Action("EnterUsernameOrMail")">
        <div class="col-md-offset-2 col-md-8">
            <h3 class="panel-heading"> @InsuredTraveling.Resource.ForgetPassword_Title </h3>
            <hr /> <br/>
        </div>               
        <div class="col-md-offset-2 col-md-6">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-key"></i></div>
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", placeholder = @InsuredTraveling.Resource.ForgetPassword_Enter } })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>
            </div>            
        </div>
        <div class="col-md-2">
            <div class="form-group">                
                <button class="btn btn-success btn-block" type="submit">
                    @InsuredTraveling.Resource.ForgetPassword_Submit &nbsp;
                    <i class="fa fa-paper-plane-o"></i>
                </button>                
            </div>
        </div>
    </form>
</div>
<br />

@if(ViewBag.Msg!=null){
   if(ViewBag.Msg=="Check your mail to reset your password"){
    <div class="row">
        <div class="alert alert-dismissible alert-success" style="width: 30%; margin-left: 27%;">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Mail Sent!</strong> <span>@ViewBag.Msg</span>
        </div>
    </div>
}else{
<div class="alert alert-dismissible alert-danger"style="width: 30%; margin-left: 27%;">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Oh snap!</strong><snap>@ViewBag.Msg</snap>
</div>
}

}
