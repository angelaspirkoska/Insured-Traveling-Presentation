            <!-- Wrapper for slides --> 
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="http://rc.com/_cs_apps/pt_photo_gallery/uploads/temp/31663428_iStock_Insurance--Reinsurance__960x500.jpg" alt="one" width="460" height="345">
                </div>

                <div class="item">
                    <img src="https://media.licdn.com/media-proxy/ext?w=800&h=800&hash=uziHn82bv25KPcQtS%2FH4ITbhEL0%3D&ora=1%2CaFBCTXdkRmpGL2lvQUFBPQ%2CxAVta5g-0R6nlh8Tw1It6a2FowGz60oISJLOTW3hGTrbi6DxERaYCLauCMPQ1VxzCV1w4X5FGbXCJGS5befrY_aIHN0M1vahWuSzfiglOUkbsWJWwOYBMjcum5iIIt6kTQpNgMNpIyWtNA" alt="two" width="460" height="345">
                </div>

                <div class="item">
                    <img src="https://www.irmi.com/images/default-source/article-images/insurance-claims-contracts/contract.jpg?sfvrsn=6" alt="three" width="460" height="345">
                </div>

                <div class="item">
                    <img src="http://mrei.mindler.com/assets/Images_Consolidated/37B-CFA.jpg" alt="four" width="460" height="345">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
