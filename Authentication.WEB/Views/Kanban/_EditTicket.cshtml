@model kanbanticket


<div class="modal-header">
    <button style="top:25%;" type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4>Edit ticket @Model.Name</h4>
</div>
<div style="padding-top: 10px;" class="modal-body">
    <form>
        <div class="form-group">
            <label for="editTicketTitle">Title</label>
            <input type="text" value="@Model.Name" class="form-control" id="editTicketTitle" name="editTicketTitle" placeholder="Title">
        </div>
        <div class="form-group">
            <label for="editTicketDescription">Description</label>
            <textarea class="form-control" name="editTicketDescription" id="editTicketDescription" rows="2">
                @Model.Description
            </textarea>
        </div>
        <div class="form-group">
            <label>Assign to users</label>
            @Html.Action("GetUsersDropdown", new { role = "assignees" })
        </div>
        <div class="form-group">
            <label>Add ticket watchers</label>
            @Html.Action("GetUsersDropdown", new { role = "watchers" })
        </div>
    </form>
</div>