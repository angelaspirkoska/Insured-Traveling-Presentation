@model kanbanpoollist

@{
    var isAddingPool = ViewBag.IsAddingPool != null ? (bool)(ViewBag.IsAddingPool) : false;
}

<div id="@Model.Id" class="list-item-wrapper is-sortable">
    <div class="list-item-content">
        <div class="list-item-header">
            <div class="row">
                <div class="col-sm-10">
                    <div class="list-item-header-target"></div>
                    <textarea class="list-item-header-name">@Model.Name</textarea>
                </div>
                <div class="col-sm-2">
                    <button onclick="deletePoolList(@Model.Id)" class="btn btn-sm btn-danger btn-remove">X</button>
                </div>
            </div>
        </div>
        <div class="list-item-cards inner-sortable" data-poollist="@Model.Id">
            @if (Model.kanbantickets != null)
            {
                foreach (var ticket in Model.kanbantickets.OrderBy(x => x.OrderBy))
                {
                    @Html.Partial("_Ticket", ticket)
                }
            }
        </div>
    </div>
    <div style="margin-top: 5px;">
        <button onclick="OpenAddTicketModal(@Model.Id)" class="btn btn-block btn-sm btn-add-ticket">Add a ticket...</button>
    </div>
</div>

<div id="addNewTicketModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add Ticket</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="addTicketPoolListId" value="-1" />

                <div class="form-group">
                    <label for="newTicketTitle">Title</label>
                    <input type="text" class="form-control" id="newTicketTitle" placeholder="Title">
                </div>
                <div class="form-group">
                    <label for="newTicketDescription">Description</label>
                    <textarea class="form-control" id="newTicketDescription" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <label for="newTicketFile">File input</label>
                    <input type="file" id="newTicketFile">
                    <p class="help-block">The policy that needs to be reviewed.</p>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-sm-offset-4 col-sm-4">
                    <button type="button" class="btn btn-block btn-add-new btn-danger" data-dismiss="modal">Close</button>
                </div>
                <div class="col-sm-4">
                    <button onclick="AddNewTicket()" type="button" class="btn btn-block btn-add-new btn-success">Add</button>
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@if (isAddingPool)
{
    <script>
        $(function () {

            setInnerSortable();

        })
    </script>
}
