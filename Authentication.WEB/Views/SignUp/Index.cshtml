                        @Html.DropDownListFor(model => model.Gender, (List<SelectListItem>)ViewBag.Gender, "-- Select Gender --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                    </div>
